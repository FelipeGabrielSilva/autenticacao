generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int           @id @default(autoincrement())
  name        String
  email       String        @unique
  password    String
  isAdmin     Boolean
  post        Post[]
  UserAbility UserAbility[]
}

model Post {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  tittle    String
  content   String
  author    User     @relation(fields: [authorId], references: [id])
  authorId  Int
}

model UserAbility {
  id         Int     @id @default(autoincrement())
  user       User    @relation(fields: [userId], references: [id])
  userId     Int
  action     Action
  subject    Subject
  conditions String

  @@unique([userId, action, subject])
  @@map("Permission")
}

enum Action {
  MANAGE
  CREATE
  READ
  UPDATE
  DELETE
}

enum Subject {
  USER
  POST
  ALL
}
